<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xyz.fayazkhan.giver.MainActivity"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chicago"
        android:id="@+id/textViewChicago"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chicago Broadcast"
        android:id="@+id/buttonChicago"
        android:layout_below="@+id/textViewChicago"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="ChicagoClickToast" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Philadelphia"
        android:id="@+id/textViewInd"
        android:layout_below="@+id/buttonChicago"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Philly Broadcast"
        android:id="@+id/buttonInd"
        android:layout_below="@+id/textViewInd"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="PhillyClickToast" />

</RelativeLayout>
